<h1>Lista zadan</h1>

<table>
  <tr>
    <th>Zadanie</th>
    <th>Data rozpoczecia</th>
    <th>Data zakonczenia</th>
    <th>Zadanie calodniowe</th>
    <th>Opis</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.ends_at %></td>
    <td><%= event.all_day %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Pokaz', event %></td>
    <td><%= link_to 'Edytuj', edit_event_path(event) %></td>
    <td><%= link_to 'Usun', event, :confirm => 'Na pewno usunac zadanie?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= button_to "Dodaj nowe zadanie", new_event_path, :method => "get" %>
<br/>
<%= button_to "Pokaz kalendarz", calendar_index_path, :method => "get" %>
